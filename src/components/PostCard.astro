---
interface Props {
  title: string;
  description?: string;
  slug: string;
  date?: Date;
  author?: string;
  tags?: string[];
  excerpt?: string;
}

const { 
  title, 
  description, 
  slug, 
  date, 
  author,
  tags = []
} = Astro.props;

const excerpt = description;
---

<article class="post-card">
  <a href={`/blog/${slug}`} class="post-link">
    <div class="post-inner">
      <!-- ÊñáÁ´†Ê†áÁ≠æË°å -->
      {tags && tags.length > 0 && (
        <div class="post-tags-row">
          <span class="post-tag">{tags[0]}</span>
        </div>
      )}

      <!-- ÊñáÁ´†Ê†áÈ¢ò‰∏éÂÖÉ‰ø°ÊÅØ -->
      <div class="post-header">
        <h3 class="post-title">{title}</h3>
        <div class="post-meta">
          {date && (
            <time class="post-date" datetime={date.toISOString()}>
              üìÖ {date.toLocaleDateString('zh-CN', {
                year: 'numeric',
                month: 'short',
                day: 'numeric'
              })}
            </time>
          )}
          {author && (
            <span class="post-author">‚úçÔ∏è {author}</span>
          )}
        </div>
      </div>

      <!-- ÊñáÁ´†ÊèèËø∞/ÊëòË¶Å -->
      {excerpt && (
        <p class="post-excerpt">{excerpt}</p>
      )}

      <!-- Â∫ïÈÉ®Êìç‰Ωú -->
      <div class="post-footer">
        <span class="read-more">ÁªßÁª≠ÈòÖËØª</span>
        <span class="arrow">‚Üí</span>
      </div>
    </div>
  </a>
</article>

<style>
  /* ÊñáÁ´†Âç°Áâá */
  .post-card {
    background: var(--color-bg, #ffffff);
    border: 1px solid #e2e8f0;
    border-radius: 12px;
    transition: all 0.3s ease;
    overflow: hidden;
  }

  .post-card:hover {
    border-color: #667eea;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    transform: translateY(-4px);
  }

  .post-link {
    text-decoration: none;
    color: inherit;
    display: block;
    height: 100%;
  }

  .post-inner {
    padding: 1.75rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  /* ÊñáÁ´†Ê†áÁ≠æË°å */
  .post-tags-row {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .post-tag {
    display: inline-block;
    background: linear-gradient(135deg, #f0f4ff, rgba(102, 126, 234, 0.1));
    color: #667eea;
    padding: 0.4rem 0.8rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    border: 1px solid rgba(102, 126, 234, 0.3);
    transition: all 0.15s ease;
  }

  .post-card:hover .post-tag {
    background: #667eea;
    color: white;
    border-color: #667eea;
  }

  /* ÊñáÁ´†Â§¥ÈÉ® */
  .post-header {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .post-title {
    font-size: 1.4rem;
    font-weight: 700;
    color: #1a202c;
    margin: 0;
    line-height: 1.4;
    transition: color 0.15s ease;
  }

  .post-card:hover .post-title {
    color: #667eea;
  }

  .post-meta {
    display: flex;
    gap: 1.25rem;
    font-size: 0.85rem;
    color: #a0aec0;
    flex-wrap: wrap;
    align-items: center;
  }

  .post-date,
  .post-author {
    display: inline-flex;
    align-items: center;
    gap: 0.3rem;
  }

  /* ÊñáÁ´†ÊëòË¶Å */
  .post-excerpt {
    color: #718096;
    line-height: 1.7;
    margin: 0;
    font-size: 0.95rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* ÊñáÁ´†Â∫ïÈÉ® */
  .post-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1rem;
    border-top: 1px solid #e2e8f0;
    transition: all 0.15s ease;
  }

  .read-more {
    color: #667eea;
    font-weight: 600;
    font-size: 0.95rem;
    transition: color 0.15s ease;
  }

  .arrow {
    color: #667eea;
    font-weight: 600;
    transition: transform 0.15s ease;
  }

  .post-card:hover .arrow {
    transform: translateX(4px);
  }

  /* Ê∑±Ëâ≤Ê®°Âºè */
  @media (prefers-color-scheme: dark) {
    .post-card {
      background: #1a1a1a;
      border-color: #333;
    }

    .post-title {
      color: #e2e8f0;
    }

    .post-excerpt {
      color: #a0aec0;
    }

    .post-footer {
      border-color: #333;
    }

    .post-tag {
      background: rgba(102, 126, 234, 0.1);
      border-color: rgba(102, 126, 234, 0.3);
    }

    .post-card:hover .post-tag {
      background: #667eea;
      color: white;
      border-color: #667eea;
    }
  }

  /* ÂìçÂ∫îÂºèËÆæËÆ° */
  @media (max-width: 768px) {
    .post-inner {
      padding: 1.25rem;
      gap: 0.75rem;
    }

    .post-title {
      font-size: 1.2rem;
    }

    .post-excerpt {
      font-size: 0.9rem;
    }

    .post-meta {
      font-size: 0.8rem;
      gap: 0.75rem;
    }
  }

  @media (max-width: 480px) {
    .post-inner {
      padding: 1rem;
      gap: 0.5rem;
    }

    .post-title {
      font-size: 1rem;
    }

    .post-excerpt {
      font-size: 0.85rem;
      -webkit-line-clamp: 2;
    }

    .post-meta {
      font-size: 0.75rem;
      gap: 0.5rem;
    }

    .post-footer {
      padding-top: 0.75rem;
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }
</style>
